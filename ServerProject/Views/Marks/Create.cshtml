@model ServerProject.Models.Marks

@{
    ViewData["Title"] = "Create";
}
<div class="col-md-12">
<div class="card">
    <div class="card-body">
        <h2>Thêm điểm</h2>

        <a asp-action="Index" class="btn btn-primary"><span class="glyphicon glyphicon-menu-left"></span> Quay lại</a>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger">
                        <h5 class="text-danger">@TempData["fail"]</h5>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <select name="Type" class="form-control">
                            <option value="1">THEORY</option>
                            <option value="2">PRATICE</option>
                            <option value="3">ASSIGNMENT</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Value" class="control-label"></label>
                        <input name="Value" class="form-control" />

                    </div>
                   
                    <div class="form-group">
                        <label asp-for="RollNumber" class="control-label"></label>
                        <select name="RollNumber" class="form-control" asp-items="ViewBag.RollNumber"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="CourseId" class="control-label"></label>
                        <select name="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>

