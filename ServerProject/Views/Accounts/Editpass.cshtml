@model ServerProject.Models.Accounts

@{
    ViewData["Title"] = "Edit";
}
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <h2>Thay đổi mật khẩu</h2>

            <h4>Accounts</h4>
            <hr />

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Editpass">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserName" class="form-control" />


                      

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password"  type="password" value="" class="form-control" />

                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" data-val-required="Không được bỏ trống" required="required" type="password" class="form-control" />

                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
