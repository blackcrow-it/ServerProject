@model ServerProject.Models.Informations

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Informations</h4>
<hr />
<div class="container ">

    <div class="row">
        <div class="col-sm-3">
            <!--left col-->


            <div class="text-center">
                <img src="@Model.Avatar" class="avatar img-circle img-thumbnail" id="imgs" alt="avatar">
            </div><br>
        </div><!--/col-3-->
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form asp-action="EditInfor">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="AccountId" />
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="Avatar" class="control-label"></label>
                                <input asp-for="Avatar" id="ava" class="form-control" />
                               
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control " />
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                               
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" />
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="MiddleName" class="control-label"></label>
                                <input asp-for="MiddleName" class="form-control" />
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="Birthday" class="control-label"></label>
                                <input asp-for="Birthday" class="form-control" />
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="Gender" class="form-control">
                                    <option value="1">Male</option>
                                    <option value="0">Female</option>
                                    <option value="2">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="submit" value="Edit" class="btn btn-danger " />
                            </div>
                        </div>
                    </form>
                    <hr>

                </div><!--/tab-pane-->

            </div><!--/col-9-->
        </div><!--/row-->
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
